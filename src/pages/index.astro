---
import "../styles.css";
---
<html>
  <head>
    <title>Home</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <div class="container">
      <h1>Welcome to Astro + Cloudflare</h1>

      <p>This is your serverless Astro application.</p>

      <a href="/login">
        <button>Go to Login Page</button>
      </a>

      <p style="margin-top:20px;">
        Your IP: <span id="ip">Loading...</span>
      </p>
    </div>

    <script>
      fetch("/api/ip")
        .then(r => r.json())
        .then(d => document.getElementById("ip").innerText = d.ip);
    </script>
  </body>
</html>
